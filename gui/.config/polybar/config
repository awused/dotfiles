[colors]
background = #bf000000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/primary]
monitor = ${env:MONITOR:}
monitor-strict = false
dpi = 0
enable-ipc = true

width = 100%
height = 30
bottom = true
;offset-x = 1%
;offset-y = 1%
radius = 10.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

border-size = 2
border-color = #00000000

module-margin-left = 1
module-margin-right = 2

font-0 = DejaVu Sans Mono:size=16;4
font-1 = Noto Sans JP:size=16;4
font-2 = FontAwesome:size=16;4
font-3 = unifont:fontformat=truetype:size=16:antialias=false;4

modules-left = i3 xkeyboard
modules-center = mpd
;modules-right = fs0 fs1 cpu gpu memory cputemp0 cputemp1 gputemp watertemp date
modules-right = fs0 fs1 cpu gpu memory gpumemory cputemp0 cputemp1 gputemp date
padding-right = 1

;tray-position = right
tray-padding = 2
;tray-background = #0063ff


scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = default

click-right = ~/.config/polybar/popup-calendar.sh --popup

; [bar/secondary]
; inherit = bar/primary
; monitor = ${env:MONITOR:}
;
; tray-position =
;

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}
format = <label-indicator>

[module/fs0]
type = internal/fs
interval = 30

mount-0 = /

label-mounted = %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/fs1]
inherit = module/fs0

mount-0 = /storage

fixed-values = true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
reverse-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = #307090
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background-alt}
label-visible-underline= ${colors.primary}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2


[module/mpd]
type = internal/mpd
;format-online = <label-song> <label-time> <icon-prev> <icon-stop> <toggle> <icon-next>
format-online = <label-song> <label-time>

host = /home/desuwa/.config/mpd/socket
icon-prev = 
